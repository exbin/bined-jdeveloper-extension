<extension xmlns="http://jcp.org/jsr/198/extension-manifest"
  id="org.exbin.deltahex.jdeveloper"
  version="0.1.0"
  esdk-version="1.0"
  rsbundle-class="org.exbin.deltahex.jdeveloper.Res">

  <name>${EXTENSION_NAME}</name>
  <owner>ExBin Project</owner>

  <trigger-hooks xmlns="http://xmlns.oracle.com/ide/extension">
    <!-- TODO Declare triggering functionality provided by extension: org.exbin.deltahex.jdeveloper -->
    <triggers>
       <editors xmlns="http://xmlns.oracle.com/ide/extension">
         <!-- Register our custom editor -->
          <editor id="org.exbin.deltahex.jdeveloper.DeltaHexEditor"
                  label="Binary"
                  default="false"
                  duplicable="false"
                  editor-class="org.exbin.deltahex.jdeveloper.DeltaHexFileEditor">
            <node-type class="oracle.ide.model.TextNode" />
            <node-type class="oracle.ide.model.ImageNode" />
            <node-type class="oracle.ide.model.DataNode" />
            <node-type class="oracle.ide.model.DeployableTextNode" />
            <node-type class="oracle.ide.model.UnrecognizedTextNode" />
            <node-type class="oracle.ide.model.XMLDataNode" />
          </editor>
        </editors>

      <actions xmlns="http://xmlns.oracle.com/jdeveloper/1013/extension">
        <action id="org.exbin.deltahex.jdeveloper.openAsHexAction">
          <properties>
            <property name="Name">Open As Hex...</property>
            <property name="SmallIcon">${OracleIcons.LABEL}</property>
          </properties>
        </action>
      </actions>

      <controllers xmlns="http://xmlns.oracle.com/ide/extension">
        <controller class="org.exbin.deltahex.jdeveloper.OpenAsHexController">
          <update-rules>
            <update-rule rule="always-enabled">
              <action id="org.exbin.deltahex.jdeveloper.openAsHexAction">
                <label>Open As Hex...</label>
              </action>
            </update-rule>
          </update-rules>
        </controller>
      </controllers>

      <!--
        Install context menus in the navigator, editor, and structure pane (explorer)
        which use the same action defined above.
      -->
      <context-menu-hook rule="always-enabled">
        <site idref="navigator, editor, explorer"/>
          <menu>
            <!-- 'weight' is used to control where the section appears in
             the menu. Weights are sorted in ascending order, each unique
             value is its own section. -->
            <!-- section element must be in namespace
             http://jcp.org/jsr/198/extension-manifest. -->
            <section xmlns="http://jcp.org/jsr/198/extension-manifest" id="MY_CUSTOM_MENU_SECTION_ONE" weight="1.0">
              <!-- For menu items and submenus, weight determines the
               order within a menu section. Items are sorted in ascending
               order or in the order they are added if the weight is not
               unique. -->
             <item action-ref="org.exbin.deltahex.jdeveloper.openAsHexAction"></item>
           </section>
         </menu>
      </context-menu-hook>

      <menu-hook xmlns="http://jcp.org/jsr/198/extension-manifest">
        <!-- 
          Add the action in its own separator group at the top of the File 
          menu. 
        -->
        <menus>
          <menubar id="javax.ide.view.MAIN_WINDOW_MENUBAR_ID">
            <menu id="javax.ide.FILE_MENU_ID">
              <section id="esdksample.customsection" before="javax.ide.NEW_SECTION_ID">
                <item action-ref="org.exbin.deltahex.jdeveloper.openAsHexAction"></item>
              </section>
            </menu>
          </menubar>
        </menus>


        <!--
          Add the action as toolbar button in its own separator group immediately after the 
          existing "save" toolbar buttons.
        -->           
        <toolbars>
          <toolbar id="javax.ide.view.MAIN_WINDOW_TOOLBAR_ID">
            <!-- Add a new section after the first section in the toolbar. -->
            <section id="javax.ide.tck.toolbar.testsection"
                   after="javax.ide.NEW_SECTION_ID">
              <item action-ref="org.exbin.deltahex.jdeveloper.openAsHexAction"></item>
            </section>
          </toolbar>
        </toolbars>
      </menu-hook>
    </triggers>
  </trigger-hooks>

  <hooks>
    <feature-hook>
      <description><![CDATA[
<p>Hexadecimal editor based on deltahex library. Use "Open as Hex" context menu item to edit files in projects.</p>

<h1>Preview</h1>
<p><img src="http://deltahex.exbin.org/images/deltahex-intellij-plugin-preview-0.1.1.png" alt="deltahex-intellij-plugin-preview"/></p>

<h1>Features</h1>
<ul><li>Show data as hexadecimal codes and text preview</li>
<li>Insert and overwrite edit modes</li>
<li>Support for selection and clipboard actions</li>
<li>Support for undo/redo</li>
<li>Support for encoding selection</li>
<li>Support for showing unprintable/whitespace characters</li>
<li>Codes can be also binary, octal or decimal</li>
<li>Searching for text / hexadecimal code with matching highlighting</li>
<li>Delta mode - Changes are stored only in memory till save</li>
<li>Support for huge files</li></ul>
    ]]></description>
      <license>Apache License, Version 2.0</license>
      <optional>true</optional>
    </feature-hook>
    <!-- TODO Declare functionality provided by extension: org.exbin.deltahex.jdeveloper -->
    <jdeveloper-hook xmlns="http://xmlns.oracle.com/jdeveloper/1013/extension">
      <actions>
        <action id="org.exbin.deltahex.jdeveloper.openAsHex">
          <properties>
            <property name="Name">Open As Hex</property>
            <property name="SmallIcon"></property>
            <property name="LongDescription">Open As Hex</property>
          </properties>
          <controller-class>org.exbin.deltahex.jdeveloper.OpenAsHexController</controller-class>
        </action>
      </actions>
    </jdeveloper-hook>
  </hooks>
</extension>
